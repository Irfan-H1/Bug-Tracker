<Window x:Class="Bug_Tracker.Windows.BugCloseConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bug_Tracker.Windows"
        mc:Ignorable="d"
        Height="357" Width="600" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">
    <Grid Background="#FF9AC7FF">
        <Image x:Name="imgLogo" Source="../Images/AireLogic.jpg" HorizontalAlignment="Left" Height="41" Margin="460,10,0,0" VerticalAlignment="Top" Width="140" />
        <Label x:Name="lblTitle" Content="Can you please confirm that you want to close&#10;down the bug?" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="40,73,0,0" VerticalAlignment="Top" Width="527" Height="78" FontSize="22" FontWeight="Bold"/>
        <Button x:Name="btnYes" Content="Yes" Margin="95,199,0,0"  FontSize="18" Height="70" VerticalAlignment="Top" Click="btnYes_Click"  HorizontalAlignment="Left" Width="130"/>
        <Button x:Name="btnNo" Content="No" Margin="375,197,95,0"  FontSize="18" Height="70" VerticalAlignment="Top" Click="btnNo_Click"/>


    </Grid>
</Window>
